
name: Update GitHub Contribution Snake

on:
  push:
    branches:
      - main  # ajuste conforme a sua branch principal

jobs:
  update_snake:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v2

      - name: Use Platane/snk action
        uses: Platane/snk@v3
        with:
          github_user_name: Szaiago
          outputs: |
            README.md  # Agora atualizaremos diretamente o README.md
